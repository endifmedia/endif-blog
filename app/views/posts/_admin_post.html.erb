
<div id="main" class="site-main" role="main">
  <div class="entry-content">

    <header class="page-header">
      <h1>Posts <%= link_to 'Add New', new_post_path %></h1>
    </header>

    <% if (obj) %> 
    <% obj.each do |post| %>
    <article class="single-article">
        <h3 class="title"><%= link_to post.title , edit_post_path(post) %></h3>
        <h4><%= gravatar_for post.user %> <%= post.user.username %> ãƒ»
          <time> 
          <%= time_ago_in_words(post.created_at) %>
          </time>
        </h4>
        
        <div class="tags"><a href="/t/react"><span class="tag">#react</span></a>
          <a href="/t/javascript"><span class="tag">#javascript</span></a>
          <a href="/t/beginners"><span class="tag">#beginners</span></a>
          <a href="/t/opensource"><span class="tag">#opensource</span></a>
        </div>
        
        <div class="">
        <%= link_to 'View', post %> 
        <% if logged_in? && current_user == post.user %>        
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </div>
    </article>
    <% end %>
    <% end %>
  </div>
</div>