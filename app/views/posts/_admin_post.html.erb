
<div id="main" class="site-main" role="main">
  <div class="entry-content">

    <header class="page-header" style="text-align:center">
      <h1>Posts</h1>
    </header>

    <div style="font-size: 12px; text-align:center">
      <%= link_to 'Add New', new_post_path %>
    </div>

    <% if (obj) %> 
    <% obj.each do |post| %>
    <article class="single-article">
        <h3 class="title"><%= link_to post.title , edit_post_path(post) %></h3>
        <h4><%= gravatar_for post.user %> <%= post.user.username %> ãƒ»
          <time> 
          <%= time_ago_in_words(post.created_at) %>
          </time>
        </h4>
        
        <% post.categories.each do |category| %>
        <div class="tags">
          <%#= link_to category_path(category) do %>
            <span class="tag"></span>#<%= category.name %>
          <%# end %>
        </div>
        <% end %>

        <span class="tag">
        
        <div class="">
        <%= link_to 'View', post %> 
        <% if logged_in? && current_user == post.user %>        
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </div>
    </article>
    <% end %>
    <% end %>
  </div>
</div>