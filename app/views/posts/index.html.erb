
<article>
  <p id="notice"><%= notice %></p>
  
  <header class="entry-header">
    <h1>Posts</h1>
  </header>
  
  <table>
    <thead>
      <tr>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title , edit_post_path(post) %></td>
          <td><%= link_to 'View', post %>         
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      
    </tbody>
  </table>
  <span style="float:right;margin-right:2em">
      <%= link_to 'Add New', new_post_path %>
      </span>
</article>