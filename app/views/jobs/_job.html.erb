<% if (obj) %> 
<div class="entry-content ui relaxed divided list">
  <% obj.each do |job| %>
    
    <div class="item">
      
      <% if job.featured_image.attached? %>
        <%= image_tag(url_for(job.featured_image),class: 'ui image', size: "50") %>
      <% end %>

      <div class="content">
        <%= link_to job.company , job_path(job), class: 'header' %>
        <div class="description"><%= job.marketing_blurb %></div>
      </div>
    </div>

  <% end %>
</div>
<% end %>


