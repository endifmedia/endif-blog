<p style="text-align: center;">Success is not final, failure is not fatal, it is the courage to continue that counts.<br>
<cite>Winston Churchill</cite></p>
</blockquote>

<%= form_for(@user) do |form| %>
  
  <p><%= form.label :username %>
  <%= form.text_field :username, placeholder: "Enter a username." %></p>

  <p><%= form.label :email %>
  <%= form.email_field :email, placeholder: "Enter your email." %></p>

  <p><%= form.label :password %>
  <%= form.password_field :password, placeholder: "Enter a password." %></p>

  <div class="actions">
    <%= form.submit "Join now" %>
  </div>
<% end %>

